#include<stdio.h>
int input(int *n,int a[100])
{
        printf(" how many numbers u want add:");
        scanf("%d",n);
        int i;
        printf("enter the numbers to be added:");
        for(i=0;i<*n;i++)
        {
                scanf("%d",&a[i]);
        }
        return 0;
}
int compute(int n,int a[100])
{
        int i,s=0;
        for(i=0;i<n;i++)
        {
                s=s+a[i];
        }
        return s;
}
void output(int s)
{
        printf("%d is the sum",s);
}
int  main()
{
        int n,s;
        int a[100];
        input(&n,a);
        s=compute(n,a);
        output(s);
}

