1.using logical operators


#include <stdio.h>
int  input(int*a,int*b,int*c)
{
     printf("enter a");
     scanf("%d",a);
     printf("enter b");
     scanf("%d",b);
     printf("enter c");
     scanf("%d",c);
}
int compare(int a,int b,int c)
{
     int d;
     if(a<b&a<c){
     d=a;
     }
     if(b<a&b<c){
     d=b;
     }
     if(c<a&c<b){
     d=c;
     }
     return d;
}
     void output(int a,int b,int c,int d)
{
     printf("%d is lesser among %d,%d,%d",a,b,c,d);
}
int main()
{
     int l,m,n,o;
     input(&l,&m,&n);
     o=compare(l,m,n);
     output(l,m,n,o);
}







2.using nested if


#include <stdio.h>
int  input(int*a,int*b,int*c)
{
     printf("enter a,b,c");
     scanf("%d,%d,%d",a,b,c);
}
int min(int a,int b,int c)
{
     if(a<b){
     if(a<c)
     return a;
     else return c;}

     else if(b<a){
     if(b<c)
     return b;
     else return c;}
}
void output(int a,int b,int c,int d)
{
     printf("%d is minimum among %d,%d,%d",d,a,b,c);
}
int main()
{
     int l,m,n,o;
     input(&l,&m,&n);
     o=min(l,m,n);
     output(l,m,n,o);
}



