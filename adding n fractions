#include<stdio.h>
struct fraction
{
        int numerator;
        int denominator;
};
int elememts()
{
        int n;
        printf("enter the number of fraction to be added:");
        scanf("%d",&n);
}
void input_fraction(int n,struct a[n],struct b[n])
{
        int i;
        printf("enter the numerators of fractions to be added:");
        for(i=0;i<n;i++)
        {
                scanf("%f",&a[i]);
        }
        printf("enter the denominators of the fractions to be added:");
        for(i=0;i<n;i++)
        {
                scanf("%f",&b[i]);
        }
}
struct fraction compute_fraction(int n,struct a[n],struct b[n])
{
        int i,struct fraction s=0;
        for(i=0;i<n;i++)
        {
                s.numerator=s.numerator*b[i]+a[i]*s.denominator;
                s.denominator=s.denominator+b[i];
        }
}
void fraction(struct fraction s)
{
        printf("sum of the fractions is: %f/%f",s.numerator/s.denominator);
}
int main()
{
        int n;
        struct a[n],b[n],s;
        int elements();
        input_fraction(n,a,b);
        compute(n,a,b);
        output(s);
}

